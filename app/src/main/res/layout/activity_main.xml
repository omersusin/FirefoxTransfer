<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleCentered="true"
            app:titleTextColor="@color/onSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Root Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/surfaceVariant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvRootIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â³"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvRootStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/checking_root"
                        android:textAppearance="?attr/textAppearanceLabelMedium"
                        android:textColor="@color/onSurfaceVariant" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- INITIAL STATE: Category Selection -->
            <LinearLayout
                android:id="@+id/cardCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/select_transfer_type"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="@color/onSurface" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnFirefox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¦Š"
                            android:textSize="32sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/firefox_family"
                                android:textAppearance="?attr/textAppearanceTitleMedium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/firefox_desc"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="@color/onSurfaceVariant" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnChromium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ"
                            android:textSize="32sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chromium_family"
                                android:textAppearance="?attr/textAppearanceTitleMedium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chromium_desc"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="@color/onSurfaceVariant" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- SELECTION STATE: From X to Y -->
            <LinearLayout
                android:id="@+id/cardSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvSourceTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBack"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_back" />
                </LinearLayout>

                <!-- FROM Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/outline"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_source"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="@color/primary"
                            android:layout_marginBottom="8dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSourceBrowsers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Flow Visual (Line) -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/outline" />

                <!-- TO Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/outline"
                    app:cardBackgroundColor="@color/surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvTargetDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/step_target"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="@color/primary"
                            android:layout_marginBottom="8dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTargetBrowsers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Backup Toggle -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surfaceVariant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/backup_before_transfer"
                                android:textAppearance="?attr/textAppearanceTitleSmall" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/backup_description"
                                android:textAppearance="?attr/textAppearanceBodySmall" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchBackup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/start_transfer"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:visibility="gone"
                    app:cornerRadius="16dp" />

                <!-- Manual Entry Link -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowManual"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Advanced: Manual Package Entry" />

                <!-- Manual Input (hidden by default) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:boxBackgroundMode="outline"
                            android:hint="@string/hint_source_package">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSourcePackage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:boxBackgroundMode="outline"
                            android:hint="@string/hint_target_package">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTargetPackage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManualTransfer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/manual_transfer" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Log Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/surfaceVariant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/log_title"
                            android:textAppearance="?attr/textAppearanceTitleSmall"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvLog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
