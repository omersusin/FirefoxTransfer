<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Browser Data Migrator"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Root Â· Gecko / Chromium"
            android:textColor="#888888"
            android:textSize="13sp"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Root Status -->
        <TextView
            android:id="@+id/txtRootStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checking root access..."
            android:textColor="#FFA726"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Source Package -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Source Package Name"
            app:hintTextColor="#64B5F6"
            app:boxStrokeColor="#64B5F6"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:inputType="text"
                android:hint="org.mozilla.firefox"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Target Package -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target Package Name"
            app:hintTextColor="#81C784"
            app:boxStrokeColor="#81C784"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:inputType="text"
                android:hint="com.brave.browser"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#333333"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="START MIGRATION"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:enabled="false"
            android:layout_marginBottom="16dp"/>

        <!-- Log Panel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Migration Log"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <ScrollView
            android:id="@+id/scrollLog"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/bg_log_panel"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter source and target package names."
                android:textColor="#888888"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp"/>
        </ScrollView>

    </LinearLayout>
</ScrollView>
